# Multi-stage Dockerfile for Ollama Web UI with optional Model Manager backend

# Stage 1: Build the React application
FROM node:25 AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm config set strict-ssl false && npm install

# Copy source files
COPY . .

# Build the application
RUN npm run build

# Stage 2: Production image with Nginx and optional Node backend
FROM node:25-alpine

WORKDIR /app

# Install nginx and ollama CLI
RUN apk add --no-cache nginx curl

# Copy backend server files
COPY package*.json ./
COPY src/server ./src/server

# Install only production dependencies
RUN npm config set strict-ssl false && npm install --production

# Copy built frontend files
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy custom nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Create nginx directories
RUN mkdir -p /var/log/nginx /var/lib/nginx/tmp /run/nginx

# Create startup script
RUN echo '#!/bin/sh' > /app/start.sh && \
    echo 'nginx' >> /app/start.sh && \
    echo 'if [ "$ENABLE_MODEL_MANAGER" = "true" ]; then' >> /app/start.sh && \
    echo '  echo "Starting Model Manager backend..."' >> /app/start.sh && \
    echo '  node src/server/index.js &' >> /app/start.sh && \
    echo 'fi' >> /app/start.sh && \
    echo 'wait' >> /app/start.sh && \
    chmod +x /app/start.sh

# Expose ports
EXPOSE 80 3001

# Start both nginx and optional backend
CMD ["/app/start.sh"]
